<AnchorPane prefHeight="800.0" prefWidth="1315.0" styleClass="background11" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateBlog">
   <Pane layoutX="215.0" layoutY="94.0" prefHeight="612.0" prefWidth="885.0" styleClass="findby" stylesheets="@design.css">
      <children>
      
          <!-- TextFields -->
          <TextField fx:id="typeField" layoutX="343.0" layoutY="172.0" prefWidth="200.0" promptText="Type:" styleClass="textfield-design" stylesheets="@design.css" />
          <TextField fx:id="titreField" layoutX="343.0" layoutY="221.0" prefWidth="200.0" promptText="Titre:" styleClass="textfield-design" stylesheets="@design.css" />
          <TextArea fx:id="contenuArea" layoutX="333.0" layoutY="274.0" prefHeight="64.0" prefWidth="220.0" promptText="Contenu:" styleClass="textfield-design" stylesheets="@design.css" />
          <TextField fx:id="imageField" layoutX="329.0" layoutY="347.0" prefHeight="50.0" prefWidth="227.0" promptText="Image:" styleClass="textfield-design" stylesheets="@design.css" />
      
          <!-- Update Button -->
          <Button fx:id="updateButton" layoutX="379.0" layoutY="526.0" mnemonicParsing="false" onAction="#updateBlog" prefHeight="50.0" prefWidth="128.0" styleClass="findby" stylesheets="@design.css" text="Modifier">
            <font>
               <Font name="Berlin Sans FB Demi Bold" size="18.0" />
            </font>
         </Button>
         <ImageView fx:id="imagedisplay" fitHeight="132.0" fitWidth="155.0" layoutX="594.0" layoutY="189.0" pickOnBounds="true" preserveRatio="true" />
         <Label alignment="TOP_CENTER" layoutX="336.0" layoutY="38.0" prefHeight="64.0" prefWidth="214.0" styleClass="label11" stylesheets="@styles.css" text="Update Blog">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
      </children>
   </Pane>
   <Button fx:id="goback" layoutX="36.0" layoutY="685.0" mnemonicParsing="false" onAction="#goback" prefHeight="64.0" prefWidth="128.0" styleClass="findby" stylesheets="@design.css" text="Retour" textFill="WHITE">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="12.0" />
      </font>
   </Button>

</AnchorPane>
