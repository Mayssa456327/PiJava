<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateBlog">

    <!-- TextFields -->
    <TextField fx:id="typeField" layoutX="178.0" layoutY="49.0" prefWidth="200.0" promptText="Type:" styleClass="textfield-design" stylesheets="@design.css" />
    <TextField fx:id="titreField" layoutX="178.0" layoutY="102.0" prefWidth="200.0" promptText="Titre:" styleClass="textfield-design" stylesheets="@design.css" />
    <TextArea fx:id="contenuArea" layoutX="178.0" layoutY="152.0" prefHeight="50.0" prefWidth="200.0" promptText="Contenu:" styleClass="textfield-design" stylesheets="@design.css" />
    <TextField fx:id="imageField" layoutX="178.0" layoutY="217.0" prefWidth="200.0" promptText="Image:" styleClass="textfield-design" stylesheets="@design.css" />

    <!-- Update Button -->
    <Button fx:id="updateButton" layoutX="230.0" layoutY="271.0" mnemonicParsing="false" onAction="#updateBlog" prefHeight="37.0" prefWidth="111.0" styleClass="findby" stylesheets="@design.css" text="Update">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="18.0" />
      </font></Button>
   <ImageView fx:id="imagedisplay" fitHeight="132.0" fitWidth="155.0" layoutX="411.0" layoutY="120.0" pickOnBounds="true" preserveRatio="true" />

</AnchorPane>
