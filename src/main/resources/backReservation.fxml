<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane prefHeight="545.0" prefWidth="927.0" styleClass="form_container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.ReservationController">
    <children>
        <VBox layoutX="15" layoutY="15" spacing="10">
            <HBox spacing="10">
                <Label text="Nom Patient:" />
                <TextField fx:id="nomPatientTextField" prefHeight="26.0" prefWidth="162.0" />
            </HBox>
            <HBox spacing="10">
                <Label text="Date de Début:" />
                <TextField fx:id="dateDebutTextField" />
            </HBox>
            <HBox spacing="10">
                <Label text="Date de Fin:" />
                <TextField fx:id="dateFinTextField" />
            </HBox>
            <HBox spacing="10">
                <Label text="Email:" />
                <TextField fx:id="emailTextField" prefHeight="26.0" prefWidth="167.0" />
            </HBox>
            <HBox spacing="10">
                <Label text="Téléphone:" />
                <TextField fx:id="telephoneTextField" prefHeight="26.0" prefWidth="137.0" />
            </HBox>
            <HBox spacing="10">
                <Label text="Hôpital:" />
                <ComboBox fx:id="hopitalComboBox" prefWidth="200.0" />
            </HBox>
            <Button onAction="#updateReservation" text="Modifier" />
            <Button onAction="#addReservation" text="Ajouter" />
            <Button onAction="#deleteReservation" text="Supprimer" />
        </VBox>
        <HBox layoutX="15" layoutY="450" spacing="10">
            <Label text="Rechercher:" />
            <TextField fx:id="searchTextField" prefHeight="26.0" prefWidth="200.0" />
            <Label text="Trier par:" />
            <ComboBox fx:id="sortComboBox" prefWidth="150" onAction="#handleSortSelection">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Nom Patient" />
                        <String fx:value="Date de Début" />
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <VBox style="-fx-padding: 40px;" />
        <TableView fx:id="reservationsTable" layoutX="320.0" layoutY="15.0" onMouseClicked="#displaySelectedReservation" prefHeight="410.0" prefWidth="555.0">
            <columns>
                <TableColumn fx:id="nomPatientColumn" prefWidth="100" text="Nom Patient">
                    <cellValueFactory>
                        <PropertyValueFactory property="nom_patient" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100" text="Téléphone">
                    <cellValueFactory>
                        <PropertyValueFactory property="telephone" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100" text="Email">
                    <cellValueFactory>
                        <PropertyValueFactory property="email" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="dateDebutColumn" prefWidth="120" text="Date de Début">
                    <cellValueFactory>
                        <PropertyValueFactory property="date_debut" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="120" text="Date de Fin">
                    <cellValueFactory>
                        <PropertyValueFactory property="date_fin" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </children>
</AnchorPane>
