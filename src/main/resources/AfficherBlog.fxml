      <Button fx:id="seecomments" layoutX="333.0" layoutY="31.0" mnemonicParsing="false" onAction="#seecommentson" prefHeight="31.0" prefWidth="125.0" styleClass="findby" stylesheets="@design.css" text="see comments">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="15.0" />
         </font></Button>
      <Button fx:id="gotoadd" layoutX="465.0" layoutY="31.0" mnemonicParsing="false" onAction="#gotoaddon" prefHeight="31.0" prefWidth="83.0" styleClass="findby" stylesheets="@design.css" text="add blog">
