<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherCmnt">

    <TextField fx:id="searchField" layoutX="20.0" layoutY="20.0" prefWidth="400.0" promptText="Enter your search query" styleClass="textfield-design" stylesheets="@design.css" />
    <Button fx:id="searchButton" layoutX="430.0" layoutY="20.0" mnemonicParsing="false" onAction="#searchAction" prefHeight="29.0" prefWidth="125.0" styleClass="findby" stylesheets="@design.css" text="Search">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="16.0" />
      </font></Button>

    <ListView fx:id="commentListView" layoutX="20.0" layoutY="60.0" prefHeight="300.0" prefWidth="560.0" />

    <!-- Add the Delete button -->
    <Button fx:id="deleteButton" layoutX="20.0" layoutY="370.0" onAction="#deleteComment" prefHeight="26.0" prefWidth="125.0" styleClass="findby" stylesheets="@design.css" text="Delete">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="14.0" />
      </font></Button>

</AnchorPane>
