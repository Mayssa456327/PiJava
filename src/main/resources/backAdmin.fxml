<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="545.0" prefWidth="927.0" styleClass="form_container" stylesheets="@style2.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.HopitalController">
    <children>
        <VBox layoutX="15" layoutY="15" spacing="10">
            <HBox spacing="10">
                <Label text="Nom:" />
                <TextField fx:id="nomTextField" prefHeight="26.0" prefWidth="162.0" stylesheets="@style2.css" />
            </HBox>
            <HBox spacing="10">
                <Label text="Adresse:" />
                <TextField fx:id="adresseTextField" />
            </HBox>
            <HBox spacing="10">
                <Label text="Téléphone:" />
                <TextField fx:id="telephoneTextField" prefHeight="26.0" prefWidth="137.0" />
            </HBox>
            <HBox spacing="10">
                <Label text="Email:" />
                <TextField fx:id="emailTextField" prefHeight="26.0" prefWidth="167.0" />
            </HBox>
            <HBox spacing="10">
                <Label text="Nombre de chambres:" />
                <TextField fx:id="nbrChambreTextField" prefHeight="26.0" prefWidth="76.0" />
            </HBox>
            <Button onAction="#updateHopital" text="Modifier" />
            <Button onAction="#addHopital" text="Ajouter" />
            <Button onAction="#deleteHopital" text="Supprimer" />
        </VBox>
        <VBox style="-fx-padding: 40px;" />
        <TableView fx:id="hopitalsTable" layoutX="320.0" layoutY="15.0" onMouseClicked="#displaySelectedHopital" prefHeight="410.0" prefWidth="555.0" styleClass="form_container" stylesheets="@style2.css">
            <columns>
                <TableColumn prefWidth="100" text="Nom">
                    <cellValueFactory>
                        <PropertyValueFactory property="nom" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100" text="Adresse">
                    <cellValueFactory>
                        <PropertyValueFactory property="adresse" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100" text="Téléphone">
                    <cellValueFactory>
                        <PropertyValueFactory property="telephone" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100" text="Email">
                    <cellValueFactory>
                        <PropertyValueFactory property="email" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="150" text="Nombre de Chambres">
                    <cellValueFactory>
                        <PropertyValueFactory property="nombre_chambre" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </children>
</AnchorPane>
